{
  "version": 2,
  "name": "story-genius-official-production",
  "scope": "tesseract-developers",
  "github": {
    "enabled": true,
    "autoAlias": true
  },
  "builds": [
    {
      "src": "apps/docs/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next"
    }
  ],
  "build": {
    "env": {
      "TURBO_TOKEN": "production"
    },
    "command": "turbo run build --scope=apps/web --scope=apps/docs"
  },
  "routes": [
    {
      "src": "^/docs/(.*)",
      "dest": "/apps/docs/$1"
    },
    {
      "src": "^/web/(.*)",
      "dest": "/apps/web/$1"
    }
  ],
  "env": {
    "API_URL": "https://api.storygenius.app"
  },
  "regions": ["sfo1", "lhr1"],
  "alias": ["story-genius-preview.vercel.app"]
}
